
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap-5-0-2.min.js"></script>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="~/CSS/Layout.css" rel="stylesheet" />
</head>
<body>
    <div class="">
        <div style="display:flex">
            <div class="archnetsHeader ">
                <img src="~/Images/Archents1.jpg" width="141" height="40" />
            </div>
            <div class="p3">
                <h1>IT Help Desk</h1>
            </div>
            @if (User.Identity.IsAuthenticated)
            {

                if (User.IsInRole("2"))
                {

                    <div style="display:flex" id="icindiv">
                        <div class="username">
                            <a>
                                <p>Hi-@Session["LoginName"]</p>
                            </a>
                        </div>
                        <div>
                            <div class="dropdown" id="account">
                                <a class="atag" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"> <i class="bi bi-person-circle"></i></a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li> <a href="/UserRegister/Logout/" class="dropdown-item"> <i class="bi bi-arrow-left-circle" style="margin-right:5px;"></i>Logout</a> </li>
                                    <li><a class="dropdown-item" href="/UserRegister/Profile"><i class="bi bi-person-plus" style="margin-right:5px;"></i>Profile</a></li>

                                </ul>
                            </div>
                        </div>
                        <br />
                        @*   <a href="~/Admin/Testing">Test</a>*@
                        @* <a href="">Admin</a>*@
                    </div>
                }
                else
                {
                    if (User.Identity.IsAuthenticated)
                    {
                        <div style="display:flex" id="icindiv">
                            <div class="username">
                                <a>
                                    <p>Hi-@Session["AdminLogin"]</p>
                                </a>
                            </div>
                            <div>
                                <div class="dropdown" id="account">
                                    <a class="atag" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"> <i class="bi bi-person-circle"></i></a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li> <a href="/UserRegister/Logout/" class="dropdown-item"> <i class="bi bi-arrow-left-circle" style="margin-right:5px;"></i>Logout</a> </li>
                                        <li><a class="dropdown-item" href="/UserRegister/Profile"><i class="bi bi-person-plus" style="margin-right:5px;"></i>Profile</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }

            }

            <div>

                <!-- Button trigger modal -->
                @*  <div id="account">

                        <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>*@
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
        <div class="footer">
        </div>
    </div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
